<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      min-height: 100vh;
      background:
        linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)),
        url("https://images.unsplash.com/photo-1524995997946-a1c2e315a42f");
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
    }

    .navbar {
      background: linear-gradient(90deg, #1d3557, #457b9d);
    }

    .navbar-brand {
      font-weight: 600;
      color: #fff !important;
    }

    .dashboard-title {
      font-weight: 600;
      margin-bottom: 20px;
      color: #fff;
    }

    .card-box {
      background: rgba(255, 255, 255, 0.95);
      border-radius: 15px;
      transition: all 0.3s ease;
    }

    .card-box:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 30px rgba(0,0,0,0.25);
    }

    .icon-box {
      font-size: 40px;
      margin-bottom: 10px;
    }

    .logout-btn {
      background: #e63946;
      border: none;
    }

    .logout-btn:hover {
      background: #c1121f;
    }
  </style>
</head>

<body>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg">
  <div class="container-fluid">
    <span class="navbar-brand">
      ðŸ“š DRK Library â€“ Admin Panel
    </span>
    <a href="/admin/logout" class="btn btn-sm logout-btn text-white">
      Logout
    </a>
  </div>
</nav>

<!-- DASHBOARD -->
<div class="container mt-4">

  <h3 class="dashboard-title">Welcome, Admin ðŸ‘‹</h3>

  <div class="row g-4">

    <!-- ADD BOOK -->
    <div class="col-md-4">
      <a href="/admin/add-book" class="text-decoration-none text-dark">
        <div class="card card-box text-center p-4">
          <div class="icon-box text-primary">
            <i class="bi bi-book"></i>
          </div>
          <h5>Add Book</h5>
          <p class="text-muted">Add new books to library</p>
        </div>
      </a>
    </div>

    <!-- VIEW BOOKS -->
    <div class="col-md-4">
      <a href="/admin/books" class="text-decoration-none text-dark">
        <div class="card card-box text-center p-4">
          <div class="icon-box text-success">
            <i class="bi bi-book-half"></i>
          </div>
          <h5>View Books</h5>
          <p class="text-muted">Manage available books</p>
        </div>
      </a>
    </div>

    <!-- ADD STUDENT -->
    <div class="col-md-4">
      <a href="/admin/add-student" class="text-decoration-none text-dark">
        <div class="card card-box text-center p-4">
          <div class="icon-box text-warning">
            <i class="bi bi-person-plus"></i>
          </div>
          <h5>Add Student</h5>
          <p class="text-muted">Register new students</p>
        </div>
      </a>
    </div>

    <!-- VIEW STUDENTS -->
    <div class="col-md-4">
      <a href="/admin/students" class="text-decoration-none text-dark">
        <div class="card card-box text-center p-4">
          <div class="icon-box text-info">
            <i class="bi bi-people"></i>
          </div>
          <h5>View Students</h5>
          <p class="text-muted">Manage student records</p>
        </div>
      </a>
    </div>

    <!-- ISSUE BOOK -->
    <div class="col-md-4">
      <a href="/admin/issue-book" class="text-decoration-none text-dark">
        <div class="card card-box text-center p-4">
          <div class="icon-box text-secondary">
            <i class="bi bi-journal-arrow-up"></i>
          </div>
          <h5>Issue Book</h5>
          <p class="text-muted">Issue books to students</p>
        </div>
      </a>
    </div>

    <!-- ISSUED BOOKS -->
    <div class="col-md-4">
      <a href="/admin/issued-books" class="text-decoration-none text-dark">
        <div class="card card-box text-center p-4">
          <div class="icon-box text-danger">
            <i class="bi bi-clock-history"></i>
          </div>
          <h5>Issued Books</h5>
          <p class="text-muted">Track issued & overdue books</p>
        </div>
      </a>
    </div>

  </div>
</div>

</body>
</html>
